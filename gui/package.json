{
  "name": "strategy-bricks-builder",
  "version": "0.1.0",
  "description": "Strategy Bricks GUI Builder - ブロック組み合わせ型戦略構築ツール",
  "main": "dist-electron/main.js",
  "author": "Strategy Bricks Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:python": "cd ../python && powershell -ExecutionPolicy Bypass -File build-exe.ps1",
    "build:win": "npm run build:python && npm run build && electron-builder --win",
    "build:dir": "npm run build:python && npm run build && electron-builder --dir",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "cross-env E2E=1 E2E_PROFILE_NAME=e2e-profile npm run build && node e2e/run.mjs"
  },
  "dependencies": {
    "@rjsf/core": "^5.15.0",
    "@rjsf/utils": "^5.15.0",
    "@rjsf/validator-ajv8": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.4",
    "recharts": "^3.7.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-vite": "^2.0.0",
    "fast-check": "^4.5.3",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.6.0"
  }
}
